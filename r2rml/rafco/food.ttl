@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.

# Namespace of RAFCO vocabulary/ontology
@prefix base: <http://rafco.jgsogo.es/linkeddata/def/rafco.ttl#>.

# Namespace of RAFCO resources
@prefix rafco: <http://rafco.jgsogo.es/linkeddata/recurso/>.

#########
# Food
#########
base:food
    rr:logicalTable [ rr:tableName "Food" ];
    
    rr:subjectMap [
      rr:template rafco:food/{NDB_no} ;
      rr:class base:Food ;
    ] ;
    
    rr:predicateObjectMap [
      rr:predicate base:long_desc;
      rr:objectMap [ rr:column "Long_Desc" ] ;
    ] ;

    rr:predicateObjectMap [
      rr:predicate base:shrt_desc;
      rr:objectMap [ rr:column "Shrt_Desc" ] ;
    ] ;
                      
    rr:predicateObjectMap [
      rr:predicate base:sci_name;
      rr:objectMap [ rr:column "SciName" ] ;
    ].
    
#########
# Food nutrients - Many to many
#########
base:food-nutrient-with-amount
    rr:logicalTable [ rr:tableName "food_foodnutrients" ];
    
    rr:subjectMap [
        rr:template rafco:food/{NDB_No} ;
    ] ;
    
    rr:predicateObjectMap [
      rr:predicate base:nutrientwithamount ;
      rr:objectMap [ 
        rr:template rafco:nutrientwithamount/{id} ;
      ] ;
    ] .

base:nutrient-with-amount
    rr:logicalTable [ rr:tableName "food_foodnutrients" ];
    
    rr:subjectMap [
        rr:template rafco:nutrientwithamount/{id} ;
        rr:class base:NutrientWithAmount ;
    ] ;
    
    rr:predicateObjectMap [
      rr:predicate base:nutrient ;
      rr:objectMap [ 
        rr:template rafco:nutrient/{Nutr_No} ;
      ] ;
    ] ;    
    
    rr:predicateObjectMap [
      rr:predicate base:amount ;
      rr:objectMap [ rr:column "Nutr_Val" ] ;
    ] .

#########
# Langual - Many to many
#########
base:langual
    rr:logicalTable [ rr:tableName "food_langual" ];

    rr:subjectMap [
        rr:template rafco:food/{NDB_No} ;
    ] ;
    
    rr:predicateObjectMap [
      rr:predicate base:langual ;
      rr:objectMap [ 
        rr:template rafco:langual/{Factor_Code} ;
      ] ;
    ] .


#########
# Langual description
#########
base:langual-desc
    rr:logicalTable [ rr:tableName "food_langualdesc" ];

    rr:subjectMap [
      rr:template rafco:langual/{Factor_Code} ;
      rr:class base:Langual ; 
    ] ;
    
    rr:predicateObjectMap [
      rr:predicate base:description;
      rr:objectMap [ rr:column "Description" ] ;
    ] .
    
#########
# Weight
#########
base:weight
    rr:logicalTable [ rr:tableName "food_weight" ];
    

